<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="style_parent">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
	</style>
	<style name="large_textview" parent="@style/style_parent">
		<item name="android:textSize">20sp</item>
		<item name="android:textColor">#fff</item>
		<item name="android:padding">5dp</item>
		<item name="android:textStyle">bold</item>
	</style>

	<style name="small_textview" parent="@style/style_parent">
		<item name="android:textSize">12sp</item>
		<item name="android:textColor">#fff</item>
		<item name="android:padding">5dp</item>
	</style>

	<style name="large_edittext" parent="@style/style_parent">
		<item name="android:textSize">28sp</item>
		<item name="android:textColor">#000</item>
		<item name="android:padding">5dp</item>
		<item name="android:layout_marginLeft">10dp</item>
		<item name="android:layout_marginRight">10dp</item>
		<item name="android:maxLines">1</item>
		<item name="android:maxLength">24</item>
	</style>

	<style name="small_edittext" parent="@style/style_parent">
		<item name="android:textSize">20sp</item>
		<item name="android:textColor">#000</item>
		<item name="android:padding">5dp</item>
		<item name="android:layout_marginLeft">5dp</item>
		<item name="android:layout_marginRight">5dp</item>
		<item name="android:maxLines">1</item>
		<item name="android:maxLength">24</item>
	</style>

	<style name="large_button" parent="@style/style_parent">
		<item name="android:textSize">28sp</item>
		<item name="android:textColor">#fff</item>
		<item name="android:padding">5dp</item>
		<item name="android:layout_marginLeft">25dp</item>
		<item name="android:layout_marginRight">25dp</item>
		<item name="android:background">@drawable/button_large</item>
		<item name="android:textStyle">bold</item>
	</style>

	<style name="small_button" parent="@style/style_parent">
		<item name="android:textSize">20sp</item>
		<item name="android:textColor">#fff</item>
		<item name="android:padding">5dp</item>
		<item name="android:layout_marginLeft">25dp</item>
		<item name="android:layout_marginRight">25dp</item>
		<item name="android:background">@drawable/button_small</item>
		<item name="android:textStyle">bold</item>
	</style>

	<style name="listview" parent="@style/style_parent">
		<item name="android:textColor">#fff</item>
		<item name="android:layout_marginLeft">5dp</item>
		<item name="android:layout_marginRight">5dp</item>
	</style>
</resources>
