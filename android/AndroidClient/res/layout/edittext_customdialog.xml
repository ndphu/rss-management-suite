<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/LinearLayoutMain"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent" android:layout_width="fill_parent"
	android:orientation="vertical">
	<!-- <TextView style="@style/large_textview" android:id="@+id/title" android:text="Dialog 
		Title" /> -->
	<EditText style="@style/small_edittext" android:id="@+id/ed_customdialog"
		android:width="320dp" />
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:weightSum="1"
		android:orientation="horizontal">
		<Button android:layout_width="0dp" android:text="OK"
			android:layout_height="wrap_content" android:layout_weight="0.5"
			android:id="@+id/btn_ok" />
		<Button android:layout_width="0dp" android:text="CANCEL"
			android:layout_height="wrap_content" android:layout_weight="0.5"
			android:id="@+id/btn_cancel" />
	</LinearLayout>
</LinearLayout>
